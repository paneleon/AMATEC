<%- include ../partials/header.ejs %>

<%- include ../partials/navigation.ejs %>


<!-- Content for the add page-->
<body>
<div class="container" id="addDiv">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1  class="title"><%= title %></h1>
            <form class="form" method="POST">
            <div class="form-group">
                <label for="titleTextField">Survey Title</label><br>
                <input type="text" class="form-control m-1" size="40" id="titleTextField" placeholder="Enter the title"
                name="name" required>
            </div><br>

            <div class="form-group">
                <label for="descTextArea">Description</label><br>
                <textarea id="descTextArea" class="form-control m-1" cols="50" rows="5" name="description" placeholder="Enter the description..."></textarea>
            </div><br>

             <div class="form-group">
                <label for="expiryDateInput">Expiration Date</label><br>
               <input type="date" class="form-control m-1"
               value="0000-00-00" name="expirationDate" id="expiryDate">
            </div><br>

            <!-- To be added to schema-->
             <div class="form-group">
                <label for="numQuesTextField">Number of Questions</label><br>
                <input type="text" class="form-control m-1" size="40" id="numQuesTextField" placeholder="Enter the number of questions" name ="numQuestions"
                required>
            </div><br>

             <!-- To be added to schema-->
             <div class="form-group">
                <label for="numOptionsTextField">Number of Options</label><br>
                <input type="text" class="form-control m-1" size="40" id="numOptionsTextField" placeholder="Enter the number of options" name ="numOptions"
                required>
            </div><br>


             <div class="d-flex flex-row justify-content-center">
            <button class="btn btn-primary blue-btn mx-1" type="submit">
                <i class="fas fa-edit"></i> Continue To Add Questions
            </button>
            <a href="/surveys" class="btn btn-warning mx-1"><i class="fas fa-undo"></i> Cancel</a>
            </div>
        </form>
        </div>
    </div>
</div>
</body>

