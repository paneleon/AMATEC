<%- include ../partials/header.ejs %>
<%- include ../partials/navigation.ejs %>

<!-- Main Content -->
<main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-14 bottomPad">
        <div>
            <!--<span class="badge rounded-pill bg-light mt-3 text-black"> -->
            <h1 class="title">
                Choose a Survey to Complete
            </h1>
        </div>

            <br />
                  
            <a class="btn btn-light btn-outline-dark" href="/surveys/add">
                    <i class="fas fa-plus-circle"></i> Create New Survey 
                </a> <br><br>

                <table class="table" id="survey-list">
                    <thead>
                <!-- Table containing survey list -->
                        <tr class="survey-header">
                            <th class="survey-number text-center col-1"><h5>Survey #</h5></th>
                            <th class="survey-name text-center col-1"><h5>Survey Name</h5></th>
                            <th class="survey-description text-center col-3"><h5>Description</h5></th>
                            <th class="survey-expiry text-center col-4"><h5>Expires On</h5></th>
                            <th class="col-3"><h5></h5></th>
                        </tr>
                    </thead>
                <!-- Repeatable Survey Template Div -->
                <!-- <<TO-DO>> ADD EXPIRATION DATE AND NO. OF RESPONSES-->
                <% for(let count = 0; count < SurveyList.length; count++) { %>
                <tr class="survey">
                    <td class="survey-number col-1"><h3><span class="circle"><%= count + 1 %></span></td>
                    <td class="survey-name col-1"><h3><a><%= SurveyList[count].title %><a/></h3></h3></td>
                    <td class="survey-description col-3"><p><%= SurveyList[count].description %></p></td>
                    <td class="survey-expiry col-4"><%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'long', day: '2-digit'}).format(SurveyList[count].expirationDate) %></td>
                    <td class="survey-button-edit col-3"><a class="btn btn-light btn-outline-dark" href="/surveys/complete/<%=SurveyList[count]._id %>">Do Survey</a></td>                    
                </tr>
                <!--new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'long', day: '2-digit'}).format(new Date())-->
                
                    
                <% } %>
                
                </table>
                <a href="" class="btn btn-dark btn-outline-light">Surveys Per Page</a>
                
        </div>
    </div>
</main>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>

