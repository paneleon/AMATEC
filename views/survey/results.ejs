<%- include ../partials/header.ejs %>

<%- include ../partials/navigation.ejs %>


<!-- Content for the add page-->
<body>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1  class="title"><%= title %></h1>
            <form class="form" method="POST">
            <div class="form-group">
                <label for="titleTextField" class="fs-4"><strong>Survey Title - </strong></label>
                <input type="text" class="form-class readonly-textfield fs-5" id="titleTextField" placeholder="" readonly value="<%= completedSurvey.surveyName %>" 
                name="title">
            </div><br>

            <div class="form-group">
                <label for="completedBy" class="fs-4"><strong>Completed By - </strong></label>
                <input id="completedBy" type="text" class="readonly-textfield" name="completedByName" placeholder="" readonly value="<%= completedSurvey.completedByName %>">
            </div><br><br>

            <% for(let i = 0; i < completedSurvey.answers.length; i++) { %>
                <div class="form-group">
                    <label for="titleTextField" class="fs-5"><strong>Question <%= i + 1 %> - </strong></label>
                    <input type="text" class="form-class readonly-textfield" id="titleTextField" placeholder="" value="<%= completedSurvey.answers[i].title %>" readonly  
                        name="question<%= i + 1 %>"><br><br>                
                        <div class="form-check ms-4">
                         <label for="answerTextField" class="fs-5"><strong>Option Selected -  </strong></label>
                            <input type="text" id="answerTextField" class="form-answers" name="answer<%= i + 1 %>"  placeholder="" value="<%= completedSurvey.answers[i].answer %>" readonly> 
                        </div>              
                </div><br>
            <% } %>

           <a href="/surveys/completed" class="btn btn-light btn-outline-dark"><i class="fas fa-arrow-circle-left"></i> Back to Completed Surveys</a> 

        </form>
        </div>
    </div>
</div>
</body>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>