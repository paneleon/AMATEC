<%- include ../partials/header.ejs %>

<%- include ../partials/navigation.ejs %>


<main class="container">
   <div class="row">
    <div class="col-md-offset-3 col-md-14 bottomPad">
        <h1  class="title"><%= title %></h1>
        <form class="form" method="POST">
            <% for(let i = 1; i <= numberOfQuestions; i++) { %>


                <input type="text" class="form-class" size="100" placeholder="Enter the Question"
                 name="<%= `question${i}` %>" required>
                 

                <% for(let j = 1; j <= numberOfOptions; j++) { %>
                    <input type="text" class="form-class" size="50" class="questionOption" placeholder="Enter the Option"
                    name="<%= `question${i}Option${j}` %>" required>
                <% } %>

            <% } %>
        </form>
            <a href="/surveys" class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit
            </a>
            <a href="/surveys" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
            

</div>
</div>
</main>

<%- include ../partials/bottom_nav.ejs %>

